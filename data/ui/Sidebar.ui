<?xml version="1.0" encoding="UTF-8"?>

<interface>

<template class="TapeDeckSidebar" parent="GtkBox">
  <property name="orientation">vertical</property>
  <property name="can-focus">no</property>

  <style>
    <class name="sidebar"/>
  </style>

  <child>
    <object class="AdwHeaderBar" id="_sidebar_header">
      <property name="show-start-title-buttons">no</property>
      <property name="show-end-title-buttons">no</property>
      
      <child type="title">
        <object class="AdwWindowTitle">
          <property name="valign">center</property>
          <property name="title">Tape Deck</property>
        </object>
      </child>

      <child type="end">
        <object class="GtkButton">
          <property name="valign">center</property>
          <property name="focusable">no</property>
          <property name="icon-name">open-menu-symbolic</property>
        </object>
      </child>

    </object>
  </child>

  <child>
    <object class="GtkListBox">
      <property name="selection-mode">browse</property>
      <property name="vexpand">no</property>

      <style>
        <class name="navigation-sidebar"/>
      </style>

      <child>
        <object class="GtkListBoxRow">
          <property name="child">
            <object class="TapeDeckSidebarItem">
              <property name="label">Local</property>
              <property name="icon-name">folder-music-symbolic</property>
            </object>
          </property>
        </object>
      </child>

      <child>
        <object class="GtkListBoxRow">
          <property name="child">
            <object class="TapeDeckSidebarItem">
              <property name="label">MPD</property>
              <property name="icon-name">network-server-symbolic</property>
            </object>
          </property>
        </object>
      </child>

      <child>
        <object class="GtkListBoxRow">
          <property name="child">
            <object class="TapeDeckSidebarItem">
              <property name="label">Favorites</property>
              <property name="icon-name">emblem-favorite-symbolic</property>
            </object>
          </property>
        </object>
      </child>

      <child>
        <object class="GtkListBoxRow">
          <property name="child">
            <object class="TapeDeckSidebarItem">
              <property name="label">Playlists</property>
              <property name="icon-name">playlist2-symbolic</property>
            </object>
          </property>
        </object>
      </child>

    </object>
  </child>

</template>

</interface>