{
  "app-id": "io.github.Miqueas.TapeDeck",
  "runtime": "org.gnome.Platform",
  "runtime-version": "42",
  "sdk": "org.gnome.Sdk//42",
  "command": "io.github.Miqueas.TapeDeck",

  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland"
  ],

  "cleanup" : [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "/share/vala",
    "*.la",
    "*.a"
  ],

  "modules": [
    {
      "name": "libmpdclient",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/MusicPlayerDaemon/libmpdclient.git",
          "branch": "master"
        }
      ]
    },

    {
      "name": "TapeDeck",
      "builddir": true,
      "buildsystem": "meson",
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}